{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0",
  "description": "Automatically fills job application forms with saved details.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
